@model DemoMVC.Models.Person

@{
    ViewData["Title"] = "Xóa Person";
}

<h2>Xóa thông tin</h2>

<h4>Bạn có chắc chắn muốn xóa người này không?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Giới tính</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Năm sinh</dt>
        <dd class="col-sm-10">@Model.YearOfBirth</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>