<h3 class="mb-0 me-3">@ViewBag.Title</h3>
<hr />
<div class="d-flex align-items-center mb-4 flex-wrap gap-2">
    <form asp-action="Index" method="get" class="d-flex align-items-center">
        <div class="input-group">
            <input type="text" id="searchString" name="searchString" value="@ViewData["CurrentFilter"]"
                class="form-control" placeholder="Tìm theo tên hoặc mã khóa học..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
    <a asp-action="Create" class="btn btn-success ms-auto">
        <i class="bi bi-plus-circle"></i> Tạo mới
    </a>
</div>